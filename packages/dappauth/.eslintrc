{
  "parser": "babel-eslint",
  "extends": [
    "prettier",
    "prettier/standard"
  ],
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "prettier/prettier": 2,
    "no-param-reassign": "error",
    "no-shadow": 2,
    "no-undef": 2,
    "eqeqeq": ["error", "smart"]
  }
}
